{
    "compilerOptions": {
        "target": "es6",
        "types": ["reflect-metadata"],
        "module": "CommonJS",
        "outDir": "./build",
        "declaration": true,
        "strict": true,
        "allowJs": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules"]
}
