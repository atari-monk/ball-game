{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "CommonJS",
    "outDir": "build",
    "declaration": true,
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
